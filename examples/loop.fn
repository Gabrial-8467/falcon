// For loop with step (Falcon style)
for i := 1 to 5 step 1 {
    show("for-loop value:", i);
}

// For loop with custom step
for j := 0 to 10 step 2 {
    show("even numbers:", j);
}

// While loop
var count = 0;
while (count < 3) {
    show("while loop:", count);
    count = count + 1;
}

// Infinite loop with break condition
function controlledLoop() {
    var k = 0;
    loop {
        show("infinite loop:", k);
        k = k + 1;
        if (k >= 3) { break; }
    }
}
controlledLoop();